<resources>
    <!-- Base application theme. -->
    <style name="Theme.DicodingStory" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.DicodingStory.CircularProgressIndicator.ExtraSmall.White" parent="Widget.Material3.CircularProgressIndicator.ExtraSmall">
        <item name="tint">@color/primaryTextColor</item>
    </style>

    <style name="ThemeOverlay.DicodingStory.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>